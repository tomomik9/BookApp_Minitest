
<h1><%= t '.Books' %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('activerecord.attributes.book.title') %></th>
      <th><%= t('activerecord.attributes.book.memo') %></th>
      <th><%= t('activerecord.attributes.book.author') %></th>
      <th><%= t('activerecord.attributes.book.picture') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.memo %></td>
        <td><%= book.author %></td>
        <td><%= book.picture %></td>
        <td><%= link_to t('scaffold.show'), book %></td>
        <td><%= link_to t('scaffold.edit'), edit_book_path(book) %></td>
        <td><%= link_to t('scaffold.destroy'), book, method: :delete, data: { confirm: t('scaffold.confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @books %>
<br>

<%= link_to t('scaffold.new'), new_book_path %>
<%= link_to t('.Reports'), reports_path %>
<%= link_to t('users.index.Users'), users_path %>
